{
  "name": "drawing-canvas-app",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "playwright test",
    "test:e2e": "./scripts/run-e2e-tests.sh",
    "test:e2e:headed": "./scripts/run-e2e-tests.sh --headed",
    "test:e2e:ui": "./scripts/run-e2e-tests.sh --ui",
    "test:e2e:debug": "./scripts/run-e2e-tests.sh --debug",
    "test:unit": "vitest",
    "test:unit:ui": "vitest --ui",
    "test:unit:coverage": "vitest --coverage",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "docker:dev": "./docker-scripts.sh dev-start",
    "docker:dev:build": "./docker-scripts.sh dev-build",
    "docker:dev:stop": "./docker-scripts.sh dev-stop",
    "docker:dev:logs": "./docker-scripts.sh dev-logs",
    "docker:prod": "./docker-scripts.sh prod-start",
    "docker:prod:build": "./docker-scripts.sh prod-build",
    "docker:prod:stop": "./docker-scripts.sh prod-stop",
    "docker:clean": "./docker-scripts.sh clean",
    "docker:status": "./docker-scripts.sh status",
    "metrics:compile": "tsc -p tsconfig.metrics.json",
    "report:structure": "npm run --silent metrics:compile && node .cache/metrics/report-structure.js",
    "metrics:build": "npm run --silent metrics:compile && node .cache/metrics/collect-build-metrics.js",
    "metrics:collect": "npm run report:structure && npm run metrics:build"
  },
  "dependencies": {
    "lucide-react": "0.277.0",
    "pdfjs-dist": "^5.4.296",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "18.2.28",
    "@types/react-dom": "18.2.11",
    "@vitejs/plugin-react": "4.0.0",
    "@vitest/ui": "^3.2.4",
    "jsdom": "^27.0.0",
    "typescript": "5.1.6",
    "vite": "^4.5.0",
    "vitest": "^3.2.4"
  }
}
