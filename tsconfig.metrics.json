{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "outDir": ".cache/metrics",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "rootDir": "scripts",
    "resolveJsonModule": true,
    "declaration": false,
    "sourceMap": false,
    "allowJs": false
  },
  "include": [
    "scripts/report-structure.ts",
    "scripts/collect-build-metrics.ts",
    "scripts/node-shim.d.ts"
  ]
}
